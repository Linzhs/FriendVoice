<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/manual_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/manual_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Toolbar.TitleText"
            android:layout_gravity="center"
            android:text="@string/manual_toolbar_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/toolbar_title_size"/>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/user_manual_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/manual_text_title"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#797e7b"/>

</LinearLayout>
