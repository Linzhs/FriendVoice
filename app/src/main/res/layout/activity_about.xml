<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.linzh.android.newfriendvoice.ui.about.AboutActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/manual_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/about_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Toolbar.TitleText"
            android:layout_gravity="center"
            android:text="@string/about_toolbar_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/toolbar_title_size"/>

    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>
