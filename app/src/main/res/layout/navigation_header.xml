<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="10dp"
    android:background="?attr/colorPrimary" >
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navigation_header_container_image"
        android:layout_width="@dimen/circle_image_view_width"
        android:layout_height="@dimen/circle_image_view_height"
        android:layout_centerInParent="true"
        android:src="@mipmap/yousheng_launcher"/>

    <TextView
        android:id="@+id/navigation_header_container_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textSize="@dimen/nav_header_text_size"
        android:textColor="@color/white"
        android:text="@string/nav_header_text"/>

</RelativeLayout>
